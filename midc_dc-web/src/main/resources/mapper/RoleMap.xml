<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cw.midc.entity.Role">
    <resultMap type="org.cw.midc.entity.Role" id="Role">
        <result column="role_id" property="roleId"/>
        <result column="name" property="name"/>
    </resultMap>
    
    <resultMap type="java.util.HashMap" id="RoleMap">
        <result column="roleId" property="roleId"/>
        <result column="name" property="name"/>
    </resultMap>

    <insert id="addRole">
        insert into
        sys_role(role_id,name)
        values(#{roleId},#{name})
    </insert>

    <select id="getRoleList" resultMap="Role">
        select * from sys_role
        <where>
            <if test="@Ognl@isNotEmpty(roleId)">
                and role_id like '%${roleId}%'
            </if>
            <if test="@Ognl@isNotEmpty(name)">
                and name like '%${name}%'
            </if>
        </where>
       <!--  <if test="@Ognl@isNotEmpty(page)">
            limit #{page.firstIndex}, #{page.pageSize}
        </if> -->
    </select>

    <select id="getRoleIdAndName" resultMap="RoleMap">
        select role_id as roleId ,name from sys_role 
    </select>

    <select id="getRoleDetail" resultMap="RoleMap">
        select role_id as roleId ,name from sys_role where role_id = #{roleId}
    </select>

    <select id="getRoleNameByRoleId" parameterType="java.lang.String" resultType="String">
        select name from sys_role where role_id = #{roleId}
    </select>

    <select id="getRoleBySignAndNoRoleId" parameterType="java.util.Map" resultMap="Role">
        select * from sys_role where  role_id != #{roleId}
    </select>


    <update id="updateRole" parameterType="java.util.Map">
        update sys_role set name=#{name},role_id=#{roleId}
        where role_id=#{roleId}
    </update>

    <select id="getRoleByRoleId" parameterType="java.lang.String" resultMap="Role">
        select * from sys_role where role_id =#{roleId}
    </select>

    <select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*) from sys_role
        <where>
            <if test="@Ognl@isNotEmpty(roleId)">
                and role_id like '%${roleId}%'
            </if>
            <if test="@Ognl@isNotEmpty(name)">
                and name like '%${name}%'
            </if>
        </where>
    </select>

    <delete id="deleteByRoleId" parameterType="java.lang.String">
        delete from sys_role where role_id = #{roleId}
    </delete>
</mapper>